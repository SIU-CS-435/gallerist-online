@model PlayerBoardViewModel
@using TeamJAMiN.Models.ComponentViewModels

<div class="row">
    Player: @Model.Player.UserName <br />
    Money: @Model.Player.Money <br />
    Commission: @Model.ComissionDisplayString
</div>

<div class="row">
    <div class="col-xs-2">
        @foreach (UnemployedAssistantViewModel assistantModel in Model.UnemployedAssistants)
        {
            @Html.Partial("~/Views/Game/PlayerBoard/UnemployedAssistant.cshtml", assistantModel)
        }
    </div>
    <div class="col-xs-8">
        <div class="row">
            <div class="col-xs-10">
                @foreach (PlayerArtViewModel artModel in Model.ExhibitingArt)
                {
                    <div class="col-xs-3">
                            <div class="player-art-tile tile">
                                @Html.Partial("~/Views/Game/PlayerBoard/PlayerArt.cshtml", artModel)
                            </div>
                    </div>
                }
            </div>
            <div class="col-xs-2">
                <div class="col-xs-12">a</div>
                <div class="col-xs-12">a</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4">
                <div class="row">
                    @foreach (ReputationTileLocationViewModel tileModel in Model.TopRowTileLocationModels)
                    {
                        <div class="col-xs-4 no-padding">
                            @Html.Partial("~/Views/Game/PlayerBoard/ReputationTileLocation.cshtml", tileModel)
                        </div>
                    }
                </div>
                <div class="row">
                    @foreach (ReputationTileLocationViewModel tileModel in Model.BottomRowTileLocationModels)
                    {
                        <div class="col-xs-4 no-padding">
                            @Html.Partial("~/Views/Game/PlayerBoard/ReputationTileLocation.cshtml", tileModel)
                        </div>
                    }
                </div>
            </div>
            <div class="col-xs-6">
                @Html.Partial("~/Views/Game/PlayerBoard/PlayerContracts.cshtml", Model.ContractView)
            </div>
            <div class="col-xs-2">
                
            </div>
        </div>
    </div>
    <div class="col-xs-2">
    </div>
</div>