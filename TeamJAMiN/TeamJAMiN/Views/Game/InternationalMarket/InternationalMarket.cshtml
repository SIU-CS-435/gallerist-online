@model TeamJAMiN.GalleristComponentEntities.Game
@using TeamJAMiN.GalleristComponentEntities
@*International Market*@
@*pre-action gain and requirement*@
<div class="row">
    @*influnce gain*@
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-3">3</div>
        <div class="col-xs-3">2</div>
        <div class="col-xs-3">1</div>
    </div>
    @*lobby requirement*@
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-3">pink or brown</div>
        <div class="col-xs-3">pink and brown</div>
        <div class="col-xs-3">pink or brown and white</div>
    </div>
</div>
@*reputation*@
<div class="row">
    @*digital*@
    <div class="row">
        <div class="col-xs-3"><div class="digital-icon art-icon"></div></div>
        @foreach (GameReputationTile tile in Model.ReputationTiles.Take(3))
            {
            <div class="col-xs-3">
                @Html.Partial("~/Views/Game/InternationalMarket/ReputationTile.cshtml", tile)
            </div>
        }
    </div>
    @*photo*@
    <div class="row">
        <div class="col-xs-3"><div class="photo-icon art-icon"></div></div>
        @foreach (GameReputationTile tile in Model.ReputationTiles.Skip(3).Take(3))
            {
            <div class="col-xs-3">
                @Html.Partial("~/Views/Game/InternationalMarket/ReputationTile.cshtml", tile)
            </div>
        }
    </div>
    @*sculpture*@
    <div class="row">
        <div class="col-xs-3"><div class="sculpture-icon art-icon"></div></div>
        @foreach (GameReputationTile tile in Model.ReputationTiles.Skip(6).Take(3))
            {
            <div class="col-xs-3">
                @Html.Partial("~/Views/Game/InternationalMarket/ReputationTile.cshtml", tile)
            </div>
        }
    </div>
    @*painting*@
    <div class="row">
        <div class="col-xs-3"><div class="painting-icon art-icon"></div></div>
        @foreach (GameReputationTile tile in Model.ReputationTiles.Skip(9).Take(3))
            {
            <div class="col-xs-3">
                @Html.Partial("~/Views/Game/InternationalMarket/ReputationTile.cshtml", tile)
            </div>
        }
    </div>
</div>
@*auction*@
<div class="row">
    @*bid 1*@
    <div class="row">
        <div class="col-xs-3">1</div>
        <div class="col-xs-3">ticket</div>
        <div class="col-xs-3">assistant</div>
        <div class="col-xs-3">tickets</div>
    </div>
    @*bid 3*@
    <div class="row">
        <div class="col-xs-3">3</div>
        <div class="col-xs-3">assistant</div>
        <div class="col-xs-3">influence</div>
        <div class="col-xs-3">money</div>
    </div>
    @*bid 6*@
    <div class="row">
        <div class="col-xs-3">6</div>
        <div class="col-xs-3">meeple</div>
        <div class="col-xs-3">money</div>
        <div class="col-xs-3">influence</div>
    </div>
</div>
@*column scoring*@
<div class="row">
    <div class="col-xs-3">Scoring</div>
    <div class="col-xs-3">
        <div class="col-xs-4">6</div>
        <div class="col-xs-4">3</div>
        <div class="col-xs-4">1</div>
    </div>
    <div class="col-xs-3">
        <div class="col-xs-4">10</div>
        <div class="col-xs-4">6</div>
        <div class="col-xs-4">3</div>
    </div>
    <div class="col-xs-3">
        <div class="col-xs-4">15</div>
        <div class="col-xs-4">10</div>
        <div class="col-xs-4">6</div>
    </div>
</div>
