@model TeamJAMiN.GalleristComponentEntities.Game
@using TeamJAMiN.GalleristComponentEntities
@{
    ViewBag.Title = "Play";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>The Gallerist</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                @*Sales Office (Contracts)*@
                <div class="col-md-12">@Html.Partial("~/Views/Game/SalesOffice/SalesOffice.cshtml")</div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @*International Market*@
                    @Html.Partial("~/Views/Game/InternationalMarket/InternationalMarket.cshtml")
                </div>
            </div>
        </div>
        <div class="col-md-6">
            @* Artist Colony *@
            @Html.Partial("~/Views/Game/ArtistColony/ArtistColony.cshtml",Model)
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            @* Media *@
            @Html.Partial("~/Views/Game/Media/Media.cshtml")
        </div>
        <div class="col-md-4 col-md-offset-2">
            <div class="col-md-12">
                <div class="col-md-4">Pink</div>
                <div class="col-md-4">Brown</div>
                <div class="col-md-4">White</div>
            </div>
        </div>
    </div>
    <div class="row">
        @* Influence Track *@
        @Html.Partial("~/Views/Game/InfluenceTrack/InfluenceTrack.cshtml")
    </div>
    @{ foreach (Player player in Model.Players)
        {
            Html.Partial("~/Views/Game/PlayerBoard/PlayerBoard.cshtml", player);
        }
    }
</div>
